@model IEnumerable<ContractManagementSystem.Models.ApplicationRole>

@{
    ViewData["Title"] = "Roles";
}
<main id="main" class="main">
<h1>Roles</h1>

<p>
    <a asp-action="Create">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@role.Id">Delete</a> |
                    <a asp-action="ManagePrivileges" asp-route-id="@role.Id">Manage Privileges</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</main>

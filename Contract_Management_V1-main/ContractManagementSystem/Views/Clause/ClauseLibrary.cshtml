@using ContractManagementSystem.ViewModels;
@model ClauseLibraryVM;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Responsive Quill Editor</title>
    <!-- Include Quill CSS -->
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <style>
        /* Style for the parent div */
        #parent {
            width: 80%;
            max-width: 800px;
            margin: auto;
            border: 2px solid #ccc;
            padding: 10px;
        }

        /* Adjusting the Quill editor's container height */
        #editor.ql-container {
            min-height: 300px; /* Minimum height */
            height: calc(100% - 60px) !important; /* Adjust based on toolbar height */
        }
    </style>
</head>
<body>
  <main id="main" class="main">


     <form method="post" asp-action="ClauseLibrary" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
        <div class="row mb-3">
            <h5> New Clause</h5>
           <div class="flex-container">
            <label for="clauseType" class="col-sm-2 col-form-label">Clause Type</label>
           </div>
            <div class="col-sm-6">
                <select class="form-select" asp-for="ClauseType" aria-label="Clause Type">
                    <option value="">Select</option>
                    <option value="standard">Standard Clause</option>
                    <option value="specific">Specific Clause</option>
                    <option value="obligation">Obligation Clause</option>
                    <option value="condition">Condition Clause</option>
                    <option value="termination">Termination Clause</option>
                    <option value="dispute_resolution">Dispute Resolution Clause</option>
                    <option value="confidentiality">Confidentiality Clause</option>
                    <option value="definition">Definition Clause</option>
                    <option value="representation">Representation Clause</option>
                    <option value="warranty">Warranty Clause</option>
                    <option value="force_majeure">Force Majeure Clause</option>
                    <option value="governing_law">Governing Law Clause</option>
                        <option value="warranty">Warranty Clause</option>
                        <option value="non-disclosure">Non-Disclosure Clause</option>
                        <option value="governing_law">Governing Law Clause</option>
                </select>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Name" class="col-sm-2 col-form-label">Clause Name</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="blue-link"></span>
            </div>
        </div>
        <div class="row mb-3">
            <label asp-for="File" class="col-sm-2 col-form-label">Upload Clause</label>
            <div class="col-sm-6">
                <input type="file" class="form-control" asp-for="File">
                <span asp-validation-for="File" class="text text-danger"></span>
            </div>
        </div>
       @*  <div class="text-center mt-3" *@
            @* <button type="button" class="btn btn-secondary">Cancel</button> *@
            <button type="submit" class="btn btn-primary">Submit</button>
        @* </div> *@
     </form>
       @*   <div id="parent">
            <div id="editor">
                <p>Hello World!</p>
            </div>
        </div> 
       
        <!-- Include Quill JS -->
        <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
        <script>
            // Initialize Quill editor
            var quill = new Quill('#editor', {
                theme: 'snow' // Specify theme
            });

            // Add modules and toolbar configuration
            quill.getModule('toolbar').add(['bold', 'italic', 'underline', 'strike', '|',
                'blockquote', 'code-block', 'heading', 'list', 'bullet', 'indent', 'link', 'image', 'video', '|',
                'clean']);
        </script> *@
  </main>




</body>
</html>

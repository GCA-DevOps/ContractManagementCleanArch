@model ( int ActiveCount, int PendingCount, int RejectedCount, int ExpiredCount,int DraftCount)




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    
    <meta content="" name="description">
    <meta content="" name="keywords">

    <link href="assets/img/favicon.png" rel="icon">
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon">


    <link href="https://fonts.gstatic.com" rel="preconnect">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet">


    <link href="assets/css/style.css" rel="stylesheet">


</head>

<body>
    <main id="main" class="main">

        <div class="DASHBOARD">
            
            <p>Contract By Status</p>
        </div><!-- End Page Title -->

        <section class="section">
            <div class="row">
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body">
                           
                            <div class="d-flex align-items-center">
                                    <i class="fa fa-check-circle text-success fs-2 me-3"></i>
                                    
                                <a asp-action="ActiveContracts" asp-controller="Contract">
                                 <h5 class="card-title">Active <span class="badge">@Model.ActiveCount</span></h5> 
                                </a>

                              
                            </div>
                        </div>
                    </div>


                </div>


                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-clock text-warning fs-2 me-3"></i>
                                
                                <a asp-action="PendingContracts" asp-controller="Contract">
                                    <h5 class="card-title">Pending <span class="badge">@Model.PendingCount</span></h5>
                                </a>
                               
                            </div>

                        </div>
                    </div>


                </div>
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-circle text-danger fs-2 me-3"></i>
                                
                                 <a asp-action="RejectedContracts" asp-controller="Contract">
                                     <h5 class="card-title">Rejected <span class="badge">@Model.RejectedCount</span></h5>
                                 </a>
                              
                            </div>

                        </div>
                    </div>


                </div>

                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-calendar text-secondary fs-2 me-3"></i>
                                 <a asp-action="ExpiredContracts" asp-controller="Contract"> 
                                     <h5 class="card-title">Expired <span class="badge">@Model.ExpiredCount</span></h5>
                                 </a>

                              
                            </div>

                        </div>
                    </div>


                </div>
            </div>
        </section>



        <section class="section">
            <div class="row">

                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fa fa-pencil text-primary fs-2 me-3"></i>
                                
                                <a asp-action="DraftContracts" asp-controller="Contract">
                                    <h5 class="card-title">Draft <span class="badge">@Model.DraftCount</span></h5>
                                </a>

                            </div>

                        </div>
                    </div>


                </div>
               

            </div>
        </section>
        <section>
            <div class="row">
                <div class="col-lg-10">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title"> Total Contract Value</h5>

                            <!-- Line Chart -->
                            <canvas id="lineChart" style="max-height: 400px;"></canvas>
                            <script>
                                document.addEventListener("DOMContentLoaded", () => {
                                    new Chart(document.querySelector('#lineChart'), {
                                        type: 'line',
                                        data: {
                                            labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                                            datasets: [{
                                                label: 'Active Contracts',
                                                data: [0,0, 0, 0, 0, 0, 0],
                                                fill: false,
                                                borderColor: 'rgb(200, 173, 127)',
                                                tension: 0.1
                                            },
                                            {
                                                label: 'Pending Contracts',
                                                data: [0, 0, 0, 0, 0, 0, 0],
                                                fill: false,
                                                borderColor: 'rgb(146, 42, 46)',
                                                tension: 0.1
                                            },
                                            {
                                                label: 'Rejected Contracts',
                                                data: [0, 0, 0, 0, 0, 0, 0],
                                                fill: false,
                                                borderColor: 'rgb(18, 67, 109)',
                                                tension: 0.1
                                            },

                                            ]
                                        },
                                        options: {
                                            scales: {
                                                y: {
                                                    beginAtZero: true
                                                }
                                            }
                                        }
                                    });
                                });
                            </script>
                            <!-- End Line CHart -->

                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main><!-- End #main -->


    

    <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/vendor/chart.js/chart.umd.js"></script>
    <script src="assets/vendor/echarts/echarts.min.js"></script>
    <script src="assets/vendor/quill/quill.min.js"></script>
    <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
    <script src="assets/vendor/tinymce/tinymce.min.js"></script>
    <script src="assets/vendor/php-email-form/validate.js"></script>


    <script src="assets/js/main.js"></script>

</body>

</html>
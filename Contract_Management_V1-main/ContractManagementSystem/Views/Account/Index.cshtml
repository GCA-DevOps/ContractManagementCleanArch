 @model Dictionary<string, IEnumerable<AppUser>>

@{
    ViewData["Title"] = "User List";
}
<main id="main" class="main">
    <h1>User List</h1>

    @if (Model.ContainsKey("Admin"))
    {
         <h2>Admins</h2>
    <table class="table">
        <!-- Table headers -->
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Other Name</th>
                <th>Email</th>
                <!-- Add other user properties as needed -->
            </tr>
        </thead>
        <tbody>
            <!-- Display Admin users -->
            @foreach (var user in Model["Admin"])
            {
                <tr>
                    <td>@user.FirstName </td>
                    <td>@user.LastName </td>
                    <td>@user.OtherName </td>
                    <td>@user.Email</td>

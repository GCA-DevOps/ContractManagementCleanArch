@using ContractManagementSystem.ViewModels
@using Microsoft.CodeAnalysis.Differencing
@using Microsoft.VisualStudio.Web.CodeGenerators.Mvc.Templates.Blazor
@model ForgotPasswordVm
@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <style type="text/css">
        .float-start {
            font-weight: bold;
            color: firebrick;
        }

        body {
            padding: 0px;
            background-image: url('../Project Images/update.jpeg');
            background-size: cover;
        }

        .btn-primary {
            background-color: firebrick;
        }

            .btn-primary:hover {
                background-color: maroon;
            }

            .btn-primary:active {
                background-color: aquamarine;
            }

        .card-container{
            padding: 0px;
            display: flex;
            flex-wrap: wrap;
            max-width: 1400px;
            max-height: 1600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f7f4eb;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            justify-content: center;
            position: relative;
            left: 0;
            right: 0;
            height: 80%;
            width: 80%;
        }


            .card-container:hover {
                box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            }

        .card-title {
            color: firebrick;
            text-align: center;
        }

        @@media screen and (max-width: 600px) {
            body {
                padding: 50px; /* Adjust padding for smaller screens */
                margin: 0;
                padding: 0;
            }

            .card-container {
                padding: 10px; /* Adjust padding for smaller screens */
                max-width: 100%; /* Make the card full width on smaller screens */
            }
        }

        @@media screen and (min-width: 1200px) {
            body {
                padding: 80px; /* Adjust padding for larger screens */
            }

            .card-container {
                padding: 50px; /* Adjust padding for larger screens */
                max-width: 1400px; /* Adjust max-width for larger screens */
                max-height: 1600px;
            }
        }

        label {
            font-weight: bold;
        }

    </style>
</head>


<div class="row">
   <div class="card-container">
     
       <div class="col-md-6">
            <h1 class="card-title"><b>Forgot Password</b></h1>
            <div class="card-body">

        <form asp-action="ForgotPassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
            </div>
        </div>
        </div>
        </div>
     


@section Scripts {
    @{
       /*  await Html.RenderPartialAsync("_ValidationScriptsPartial") */
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
